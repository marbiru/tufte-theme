{
    "name": "uri-theme",
    "description": "A theme for uri",
    "version": "0.0.1",
    "engines": {
        "ghost" : ">=1.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "github_link": {
                "type": "text",
                "default": ""
            },
            "twitter_link": {
                "type": "text",
                "default": ""
            },
            "mail": {
                "type": "text",
                "default": ""
            },
            "stack_overflow_link": {
                "type": "text",
                "default": ""
            },
            "button_color":{
                "type": "color",
                "default": "#000000"
            },
            "button_text_color":{
                "type": "color",
                "default": "#ffffff"
            },
            "button_hover_color":{
                "type": "color",
                "default": "#000000"
            },
            "button_hover_text_color":{
                "type": "color",
                "default": "#ffffff"
            },
            "heading_color":{
                "type": "color",
                "default": "#41464b"
            },
            "sub_heading_color":{
                "type": "color",
                "default": "#64696e"
            },
            "text_color":{
                "type": "color",
                "default": "#111111"
            }
        }
    }
}

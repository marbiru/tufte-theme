<footer class="footer">
    <hr>
    <ul class="page-footer-menu">
		{{#if @custom.github_link}}
      <li><a href="{{@custom.github_link}}"><i class="fa fa-github fa-2x"></i> </a></li>
		{{/if}}
    {{#if @custom.twitter_link}}
      <li><a href="{{@custom.twitter_link}}"><i class="fa fa-twitter fa-2x"></i> </a></li>
    {{/if}}
		{{#if @custom.mail}}
      <li><a href="mail:{{@custom.mail}}"><i class="fa fa-envelope fa-2x"></i> </a></li>
    {{/if}}
		{{#if @custom.stack_overflow_link}}
      <li><a href="{{@custom.stack_overflow_link}}"><i class="fa fa-stack-overflow fa-2x"></i> </a></li>
    {{/if}}
		</ul>
    <section class="copyright"><a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}}. {{#if @custom.fotter_copyright_text}} {{@custom.fotter_copyright_text}} {{/if}}</section>
</footer>

         
        